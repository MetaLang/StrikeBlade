                    runSpeed = hspeed;
                    hspeed = 0;
                 }
                 
            }
            
            laserRefreshed = false;
            bombRefreshed = false;
        
            
             with(objLaserBeamMessenger) {
                    instance_destroy();
                }
                
                with(objLaserBeam) {
                    instance_destroy();
                }

    break; 
        
