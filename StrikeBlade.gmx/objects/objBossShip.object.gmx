                    instance_create(x - (100 * hspeed), y + 100, objBossBomb);
                    alarm[0] = bombRefreshTime;
                    bombRefreshed = false;
                }
            }
        }

    break;
        
    case BossShipStates.spawnDrones:
    if(hp &lt; 1) {
        currentState = BossShipStates.exploding;
        break;
    }
    // Summon Drones
        // sprite_index = sprHeavyAttackDroneBomb;
        if(image_index == 14) {
            image_index = 15;
            image_speed = 0;
